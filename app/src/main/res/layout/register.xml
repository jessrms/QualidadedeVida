<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    	xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollregister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   		 android:background="@drawable/android"     
         >

<LinearLayout 
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
	<LinearLayout 
	    		android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_gravity="center">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/styles_edit_text"
            android:layout_gravity="center"
            android:id="@+id/fname"
            android:hint="Nome"
            android:textColor="#000000"

        android:textStyle="bold" />


    <EditText
           android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/styles_edit_text"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:id="@+id/lname"
            android:hint="Sobrenome"
            android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/styles_edit_text"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="Email"
            android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/styles_edit_text"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:id="@+id/uname"
            android:hint="UsuÃ¡rio"
            android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/styles_edit_text"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pword"
            android:hint="Senha"
            android:layout_marginTop="15dp"
        android:textStyle="bold" />
</LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center" >
	
    <Button
            android:layout_width="130dp"
        	android:layout_height="40dp"
            
            android:text="Registrar"
            android:id="@+id/register"
            android:background="#94d696"
            android:textColor="@drawable/button_cor"
            android:textSize="13dp"
            android:layout_marginRight="10dp"/>
	
    <Button
             android:layout_width="130dp"
        	android:layout_height="40dp"
            android:text="Voltar"
            android:id="@+id/bktologin"
            android:background="#94d696"
            android:textColor="@drawable/button_cor"
            android:textSize="13dp"/>
</LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/register_error"
            />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/cozinha" />

</LinearLayout>
</ScrollView>
