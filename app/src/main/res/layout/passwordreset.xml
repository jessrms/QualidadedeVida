<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    	xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollreset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   		 android:background="@drawable/android"     
         >

<LinearLayout 
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="100dp" >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECUPERAÇÃO DE SENHA"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="130dp"
            android:id="@+id/tvres"
            android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" 
        android:layout_gravity="center">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/styles_edit_text"
            android:id="@+id/forpas"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:hint="Email"
            android:inputType="textEmailAddress"
        android:textStyle="bold" />
	</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center" >
	<Button
        android:id="@+id/respass"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
      
        android:background="#94d696"
        android:text="Recuperar"
        android:textColor="@drawable/button_cor"
        android:textSize="13dp" />

    
	<Button
        android:id="@+id/bktolog"
        android:layout_width="130dp"
        android:layout_height="40dp"
        
        android:background="#94d696"
        android:text="Voltar"
        android:textColor="@drawable/button_cor"
        android:textSize="13dp" />
</LinearLayout>
    
       <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:id="@+id/alert"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ia"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/cozinha" />

</LinearLayout>
</ScrollView>